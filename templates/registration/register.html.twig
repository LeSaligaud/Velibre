{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center flex-column">
    <img class="mb-4" style="width: 30vw;height: 10vh;" src="{{ asset('images/logo.png') }}" alt="Logo Vélibre">
    <h1 style="text-align: center">Création de compte</h1>

    <div class="form-signin">
        {{ form_start(registrationForm) }}
        <br>
        {{ form_row(registrationForm.email) }}
        <br>
        {{ form_row(registrationForm.plainPassword, {
            label: 'Mot de passe'
        }) }}

        <button type="submit" class="w-100 btn btn-lg btn-primary mt-2">Créez un compte</button>
        {{ form_end(registrationForm) }}
    </div>

</div>
{% endblock %}
